#!/usr/bin/env bash
set -eo pipefail

indent() {
  sed -u 's/^/       /'
}

LIBRARY="gifsicle"

VERSION="1.87"

echo "-----> Installing LIBRARY$ $VERSION"

BUILD_DIR="$1"
VENDOR_PATH="$BUILD_DIR/vendor"

PROFILE_PATH="$BUILD_DIR/.profile.d"
INSTALL_PATH="$VENDOR_PATH/$LIBRARY"

DOWNLOAD_URL="https://github.com/kohler/gifsicle/archive/v$GIFSICLE_VERSION.tar.gz"

echo "DOWNLOAD_URL = " $DOWNLOAD_URL | indent

mkdir -p "$INSTALL_PATH"
# cd "$INSTALL_PATH"

curl -L --silent $DOWNLOAD_URL | tar xz

cd "$LIBRARY-$VERSION"

./bootstrap.sh
autoconf -i

./configure --disable-gifview --prefix="$INSTALL_PATH"
make
make install

mkdir -p "$PROFILE_PATH"
EXPORT_PATH='export PATH="$PATH:'"$INSTALL_PATH"'/bin"'
echo "$EXPORT_PATH" >> "$PROFILE_PATH/$LIBRARY.sh"
